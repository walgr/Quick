<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.wpf.app.quick.demo.viewmodel.RecyclerViewTestViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.wpf.app.quick.widgets.selectview.QuickMultistageSelectView
            android:id="@+id/selectList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.wpf.app.quick.widgets.recyclerview.QuickSelectRecyclerView
                android:id="@+id/list1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <com.wpf.app.quick.widgets.recyclerview.QuickSelectRecyclerView
                android:id="@+id/list2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </com.wpf.app.quick.widgets.selectview.QuickMultistageSelectView>

    </RelativeLayout>

</layout>
