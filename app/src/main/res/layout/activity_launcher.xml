    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="16dp">

        <com.wpf.app.base.widgets.GlideImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerInside"
            app:error="@mipmap/ic_launcher"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loadUrl="https://www.2008php.com/09_Website_appreciate/10-07-11/1278861720_g.jpg"
            app:placeholder="@mipmap/ic_launcher"
            app:roundedCorners="8dp">

        </com.wpf.app.base.widgets.GlideImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
