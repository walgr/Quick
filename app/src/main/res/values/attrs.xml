<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GlideImageView">
        <attr name="transcodeType">
            <enum name="asDrawable" value="0" />
            <enum name="asBitmap" value="1" />
            <enum name="asGif" value="2" />
        </attr>
        <attr name="scaleType">
            <enum name="matrix" value="0" />
            <enum name="fitXY" value="1" />
            <enum name="fitStart" value="2" />
            <enum name="fitCenter" value="3" />
            <enum name="fitEnd" value="4" />
            <enum name="center" value="5" />
            <enum name="centerCrop" value="6" />
            <enum name="centerInside" value="7" />
            <enum name="circleCrop" value="8" />
        </attr>
        <attr name="placeholder" format="reference" />
        <attr name="error" format="reference" />
        <attr name="loadUrl" format="string" />
        <attr name="roundedCorners" format="dimension" />
        <attr name="topLeftRadius" format="dimension" />
        <attr name="topRightRadius" format="dimension" />
        <attr name="bottomLeftRadius" format="dimension" />
        <attr name="bottomRightRadius" format="dimension" />
    </declare-styleable>
</resources>