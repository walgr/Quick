<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MultiFunctionView">
        <attr name="showCheckBox" format="boolean" />
        <attr name="isCheck" format="boolean" />
        <attr name="checkBoxWidth" format="dimension" />
        <attr name="checkboxBackground" format="reference" />
        <attr name="checkboxLeftMargin" format="dimension" />
        <attr name="checkboxRightMargin" format="dimension" />
        <attr name="showLeftImage" format="boolean" />
        <attr name="leftImageBackground" format="reference" />
        <attr name="leftImageSrc" format="reference" />
        <attr name="leftImageWidth" format="dimension" />
        <attr name="leftImageScaleType" format="enum">
            <enum name="matrix" value="0" />
            <enum name="fitXY" value="1" />
            <enum name="fitStart" value="2" />
            <enum name="fitCenter" value="3" />
            <enum name="fitEnd" value="4" />
            <enum name="center" value="5" />
            <enum name="centerCrop" value="6" />
            <enum name="centerInside" value="7" />
        </attr>
        <attr name="leftImageLeftMargin" format="dimension" />
        <attr name="leftImageRightMargin" format="dimension" />
        <attr name="title" format="string" />
        <attr name="titleHint" format="string" />
        <attr name="titleBackground" format="reference" />
        <attr name="titleSize" format="dimension" />
        <attr name="titleColor" format="color" />
        <attr name="titleHintColor" format="color" />
        <attr name="titleMaxLine" format="integer" />
        <attr name="titleWpfStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="subTitle" format="string" />
        <attr name="subTitleHint" format="string" />
        <attr name="subTitleBackground" format="reference" />
        <attr name="subTitleSize" format="dimension" />
        <attr name="subTitleColor" format="color" />
        <attr name="subTitleHintColor" format="color" />
        <attr name="subTitleMaxLine" format="integer" />
        <attr name="subTitleWpfStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="subTitleMarginTop" format="dimension" />
        <attr name="showRightImage" format="boolean" />
        <attr name="rightImageBackground" format="reference" />
        <attr name="rightImageSrc" format="reference" />
        <attr name="rightImageWidth" format="dimension" />
        <attr name="rightImageScaleType" format="enum">
            <enum name="matrix" value="0" />
            <enum name="fitXY" value="1" />
            <enum name="fitStart" value="2" />
            <enum name="fitCenter" value="3" />
            <enum name="fitEnd" value="4" />
            <enum name="center" value="5" />
            <enum name="centerCrop" value="6" />
            <enum name="centerInside" value="7" />
        </attr>
        <attr name="rightImageLeftMargin" format="dimension" />
        <attr name="rightImageRightMargin" format="dimension" />
        <attr name="clickView" format="enum">
            <enum name="itemView" value="0" />
            <enum name="checkBox" value="1" />
            <enum name="leftImage" value="2" />
            <enum name="title" value="3" />
            <enum name="subTitle" value="4" />
            <enum name="rightImage" value="5" />
        </attr>
        <attr name="clickOnlyCheckBox" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AspectRatioView">
        <attr name="ratio" format="float" />
    </declare-styleable>

    <declare-styleable name="ViewShadow">
        <attr name="key" format="string" />
        <attr name="bindTypes" format="flags">
            <flag name="visibility" value="0x00000001"/>
            <flag name="text" value="0x00000010"/>
            <flag name="textSize" value="0x00000100"/>
            <flag name="textColor" value="0x00001000"/>
            <flag name="textColorStateList" value="0x00010000"/>
            <flag name="isSelect" value="0x00100000"/>
            <flag name="checked" value="0x01000000"/>
            <flag name="background" value="0x10000000"/>
        </attr>
    </declare-styleable>
</resources>